<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bika">

<head>
    <title></title>
</head>

<body>
<div metal:fill-slot="main">

    <h1>
        <img src="" tal:attributes="src string:++resource++bika.lims.images/analysisprofile_big.png"/>
        <span i18n:translate="heading_import_ar">UW Import Analysis Request Data</span>
    </h1>

    <form method="post" name="import_analysisrequest" enctype="multipart/form-data">

        <input type="hidden" name="submitted" value="1"/>
        <input type="hidden" name="ClientID" value=""
               tal:attributes="value here/getId"/>
        <tal:importoption tal:define="options here/getARImportOptions;
                    options python:options and options or ['c',]">
            <input type="hidden" name="ImportOption" value="c"
                   tal:condition="python:len(options) == 1"
                   tal:attributes="value python:options[0]">
        </tal:importoption>

        <div class="field">
            <label for="arimport_file" i18n:translate="label_import_ar_file">
                <input id="arimport_file" type="file" name="csvfile" size="60"/>
                Select CSV file
            </label>
            <br/>
        </div>

        <div class="field">
            <label for="check_input" i18n:translate="label_debug">
                <input type="checkbox"
                       name="check"
                       id="check_input"
                       tal:attributes="checked request/form/debug|nothing"
                       value="1"/>
                Check Import Data
            </label>
        </div>

        <input tabindex=""
               class="context"
               type="submit"
               name="submit"
               value="Import"
               i18n:attributes="value"/>
    </form>
    <div id="importdata">
        <pre tal:condition="view/data|nothing" tal:content="view/data|nothing"/>
    </div>
</div>

</body>
</html>
